generator client {
    provider = "prisma-client-js"
    previewFeatures = ["relationJoins"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Role {
    id          Int     @id @default(autoincrement())
    code        String
    name        String
    description String?

    @@map("role")
}

model Sport {
    id              Int     @id @default(autoincrement())
    name            String
    sectionCount    Int
    defaultDuration Int
    description     String?
    positions       SportPosition[]
    teams           Team[]
    statTypes       SportStatType[]

    @@map("sport")
}

model SportPosition {
    id            Int     @id @default(autoincrement())
    sportId       Int
    code          String
    name          String
    description   String?
    left          String?
    right         String?
    top           String?
    bottom        String?
    sport         Sport?  @relation(fields: [sportId], references: [id])
    eventPlayers  EventPlayer[]
    eventLogs     EventLog[]

    @@map("sport_position")
}

model Team {
    id             Int     @id @default(autoincrement())
    sportId        Int
    name           String
    coach          String?
    coordinatorId  Int
    createdAt      DateTime @default(now())
    sport          Sport?  @relation(fields: [sportId], references: [id])
    coordinator    User?  @relation(fields: [coordinatorId], references: [id])
    members    TeamMember[]
    events      Event[]

    @@map("team")
}

model TeamMember {
    id             Int     @id @default(autoincrement())
    teamId         Int
    name           String
    positions      String
    JoinedAt       DateTime @default(now())
    team           Team?  @relation(fields: [teamId], references: [id])
    eventPlayers   EventPlayer[]
    eventLogItems  EventLog[]

    @@map("team_member")
}

model User {
    id            Int     @id @default(autoincrement())
    firstName     String
    lastName      String
    email         String  @unique
    password      String
    roleId        Int
    createdAt     DateTime @default(now())
    teams         Team[]

    @@map("user")
}

model EventType {
    id          Int     @id @default(autoincrement())
    name        String
    text        String?
    description String?
    events   Event[]

    @@map("event_type")
}

model Event {
    id            Int     @id @default(autoincrement())
    typeId        Int
    teamId        Int
    opponent      String?
    location      String?
    date          DateTime?
    duration      Int?
    createdAt     DateTime? @default(now())
    type          EventType?  @relation(fields: [typeId], references: [id])
    team          Team?  @relation(fields: [teamId], references: [id])
    trainingItems TrainingItem[]
    eventSections EventSection[]
    eventPlayers  EventPlayer[]
    eventLogs     EventLog[]

    @@map("event")
}

model EventSection {
    id             Int     @id @default(autoincrement())
    eventId        Int
    sectionNumber  Int
    name           String
    currentSeconds Int @default(0)
    finished       Boolean @default(false)
    event          Event?  @relation(fields: [eventId], references: [id])

    @@map("event_section")
}

model TrainingItem {
    id          Int     @id @default(autoincrement())
    eventId  Int
    name        String
    duration    Int
    notes       String?
    event    Event?  @relation(fields: [eventId], references: [id])

    @@map("training_item")
}

model EventPlayer {
    id             Int     @id @default(autoincrement())
    eventId        Int
    positionId     Int
    memberId       Int
    createdAt      DateTime? @default(now())
    event          Event?  @relation(fields: [eventId], references: [id])
    position       SportPosition?  @relation(fields: [positionId], references: [id])
    player         TeamMember?  @relation(fields: [memberId], references: [id])

    @@map("event_player")
}

model SportStatType {
    id        Int     @id @default(autoincrement())
    code      String
    name      String
    stat      Boolean @default(false)
    penalty   Boolean @default(false)
    sportId   Int
    sport     Sport? @relation(fields: [sportId], references: [id])
    eventLogs EventLog[]

    @@map("sport_stat_type")
}

model EventLog {
    id          Int     @id @default(autoincrement())
    eventId     Int
    positionId  Int?
    codeId      Int
    playerId    Int?
    period      Int?
    createdAt   DateTime? @default(now())
    event       Event? @relation(fields: [eventId], references: [id])
    position    SportPosition? @relation(fields: [positionId], references: [id])
    code        SportStatType? @relation(fields: [codeId], references: [id])
    player      TeamMember? @relation(fields: [playerId], references: [id])

    @@map("event_log")
}